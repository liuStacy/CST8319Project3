<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/colorPeriwinkle">

    <!-- 📝 Item Name -->
    <EditText
        android:id="@+id/editDialogItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item name"
        android:inputType="text"
        android:backgroundTint="@color/colorMountbattenPink"
        android:textColor="@color/colorCinereousDark"
        android:layout_marginBottom="12dp"/>

    <!-- 🏷️ Brand -->
    <EditText
        android:id="@+id/editDialogItemBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Brand"
        android:inputType="text"
        android:backgroundTint="@color/colorMountbattenPink"
        android:textColor="@color/colorCinereousDark"
        android:layout_marginBottom="12dp"/>

    <!-- 💲 Price -->
    <EditText
        android:id="@+id/editDialogItemPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:backgroundTint="@color/colorMountbattenPink"
        android:textColor="@color/colorCinereousDark"
        android:layout_marginBottom="12dp"/>

    <!-- 🔢 Quantity -->
    <EditText
        android:id="@+id/editDialogItemQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity"
        android:inputType="number"
        android:backgroundTint="@color/colorMountbattenPink"
        android:textColor="@color/colorCinereousDark"
        android:layout_marginBottom="12dp"/>

</LinearLayout>
